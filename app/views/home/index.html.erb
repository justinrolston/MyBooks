<div class="row">
  <div class="span6">
    <h1>Books</h1>
    <table class="table table-striped">
      <% @books.each do |book| %>
        <tr>
          <td>
            <dl class="dl-horizontal">
              <dt>Title:</dt>
              <dd><strong><%= book.title %></strong></dd>
              <dt>Author:</dt>
              <dd><%= book.author %></dd>
            </dl>
          </td>
          <td>
              <img class="img-polaroid" src="http://covers.openlibrary.org/b/isbn/<%= book.isbn10 %>-S.jpg" />
          </td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate @books, :renderer => BootstrapPagination::Rails %>
  </div>
</div>
